{
  "name": "tdg",
  "version": "1.0.0",
  "description": "Tower Defense Game",
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "start": "electron .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build:win": "electron-builder --win --x64",
    "build": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "jest": "^29.0.0"
  },
  "build": {
    "appId": "com.tdg.towerdefense",
    "productName": "Tower Defense Game",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.cjs",
      "index.html",
      "src/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": null
    }
  }
}
